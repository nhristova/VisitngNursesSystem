@model VNS.Web.Areas.Administration.Models.UserDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="row">
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>

        <dd>
            @Helpers.UserStatusLabel(Model.IsDeleted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserRoles)
        </dt>

        <dd>
            @foreach (var role in Model.UserRoles)
            {
                <label class="label label-default">@role</label>
            }
        </dd>

    </dl>
</div>
<div class="row">

    <div class="col-md-offset-2 col-md-2">
        @Html.ActionLink("Cancel", "Index", "Admin", null, htmlAttributes: new { @class = "btn btn-default btn-sm" })
        @Html.ActionLink("Edit", "Edit", "Users", routeValues: new { username = Model.UserName }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
    </div>

</div>
