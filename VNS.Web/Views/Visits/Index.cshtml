@using VNS.Web.Helpers
@using VNS.Web.Models.Visits
@model VisitsViewModel
@{
    ViewBag.Title = "Visits";
    ViewBag.Message = "Page";
}

<header class="row">
    <div class="col-md-12 text-center">
        <h2>@ViewBag.Title.</h2>
        <p>@ViewBag.Message</p>

        @if (TempData["message"] != null)
        {
            <div id="msg" class="vns-message alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["message"] (TempData)
            </div>
        }

    </div>
</header>

<section id="vns-search" class="row">
    <div class="col-sm-3 col-xs-5">
        <img src="~/Content/images/duck.svg" alt="duck" class="page-image" />
    </div>
    <div class="col-sm-9 col-xs-12">
        @Html.Partial("_SearchPartial", Model)
    </div>
</section>

<hr />

<section id="vns-cards" class="row">

    @* TODO: Visits is IEnumerable but has Count(). How?? *@
    @if (Model.Visits.Count() == 0)
    {
        <p class="text-center">No visits to show</p>
    }

    @foreach (var visit in Model.Visits)
    {
        @Html.Partial("_VisitCardPartial", visit)
    }

</section>

<section id="vns-pagination" class="row text-center">

    @Html.Partial("_PaginationPartial", Model.PageCount)

</section>

@* Modal wrapper *@

<div id="vns-visit-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" id="vns-visit-content">
        <div class="modal-content">
            <div class="modal-body text-center">
                <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @* TODO: don't forget to include in other pages using ajax*@
    @* Validates data before form submission *@
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        // Hides TempData message
        $('#msg').delay(3000).fadeOut(300);

        // Clears the content of the modal when closed
        $('#vns-visit-modal').on('hidden.bs.modal', function () {
            $('#vns-visit-content').html('<div class="modal-content"><div class="modal-body text-center"><i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i><span class="sr-only">Loading...</span></div></div>');
        })
    </script>

