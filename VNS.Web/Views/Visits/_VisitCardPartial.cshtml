@using VNS.Web.Models.Visits
@model VisitCardViewModel

<div class="col-sm-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            @*<button type="button" class="btn btn-warning btn-sm btn-circle">
                    <i class="fa fa-pencil"></i>
                </button>*@
            <img src="~/Content/images/girl-01.svg" class="profile-image pull-right" alt="profile-image" />
            <h4>@Model.NurseName</h4>
            <p>@Model.Date.ToString("dd.MM.yy")</p>
        </div>
        <div class="panel-body">
            <p>@Model.Description</p>
        </div>
        <div class="panel-footer">
            @*<a href="#visitDetailsModal" id="btnOpen" class="btn btn-info btn-sm" data-toggle="modal" data-name="@Model.NurseName">Open</a>
                <a href="#visitDetailsModal" id="btnEdit" class="btn btn-warning btn-sm" data-toggle="modal" data-name="@Model.NurseName">Edit</a>*@
            @Html.ActionLink("Open", "Open", "Visits",
                new { Id = Model.Id },
                new { @class = "btn btn-info btn-sm" })

            @Html.ActionLink("Edit", "Edit", "Visits",
                new { Id = Model.Id },
                new { @class = "btn btn-warning btn-sm" })

            <p>Ajax</p>

            @Ajax.ActionLink("OpenAjax", "Open", "Visits",
                new { Id = Model.Id },
                new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "visitDetails" },
                new { @class = "btn btn-info btn-sm", data_toggle = "modal", data_target = "#visitDetailsModal" })

            @Ajax.ActionLink("EditAjax", "EditAjax", "Visits",
                new { Id = Model.Id },
                new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "visitDetails" },
                new { @class = "btn btn-warning btn-sm", data_toggle = "modal", data_target = "#visitDetailsModal" })

            <p class="edit-info text-right">
                Added: @Html.DisplayFor(v => Model.CreatedOn)<br />
                Edited: @Html.DisplayFor(v => Model.LastModifiedOn)
            </p>
        </div>
    </div>
</div>
