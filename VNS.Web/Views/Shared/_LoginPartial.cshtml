@using Microsoft.AspNet.Identity
@using VNS.Web.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
                    <i class="fa fa-user fa-2x fa-fw hidden-md hidden-lg" title="Account" data-toggle="tooltip" data-placement="bottom"></i>
                    <span class="hidden-sm">@User.Identity.GetUserName()</span>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/manage">Manage</a></li>
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            @* TODO: remove *@
                            @*<i class="fa fa-sign-out fa-2x fa-fw hidden-md hidden-lg" title="Log off" data-toggle="tooltip" data-placement="bottom"></i>*@
                            @*<span class="hidden-sm">Log off</span>*@
                            Log off
                        </a>
                    </li>
                </ul>
            </li>
            <li>

            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class='@Html.IsActive("Account", "Register")'>
            <a href="/account/register" id="registerLink">
                <i class="fa fa-user-plus fa-2x fa-fw hidden-md hidden-lg" title="Register" data-toggle="tooltip" data-placement="bottom"></i>
                <span class="hidden-sm">Register</span>
            </a>
        </li>
        <li class='@Html.IsActive("Account", "Login")'>
            <a href="/account/login" id="loginLink">
                <i class="fa fa-sign-in fa-2x fa-fw hidden-md hidden-lg" title="Log in" data-toggle="tooltip" data-placement="bottom"></i>
                <span class="hidden-sm">Log in</span>
            </a>
        </li>
    </ul>
}

